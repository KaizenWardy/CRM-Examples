        <Label x:Name="Email" Content="Email" HorizontalAlignment="Left" Margin="542,0,0,0" VerticalAlignment="Top" Width="258"/>
        <Label x:Name="Reg_data" Content="Reg _data" HorizontalAlignment="Left" Margin="542,26,0,0" VerticalAlignment="Top" Width="106"/>
        <WrapPanel x:Name="Tag_panel" HorizontalAlignment="Left" Height="23" Margin="105,52,0,0" VerticalAlignment="Top" Width="695" Loaded="Tag_panel_Loaded"/>
